imports:
  - name: setup-common.sh
    path: setup-common.sh
  - name: setup-data.sh
    path: setup-data.sh

info:
  version: '1.0'
  title: InfluxDB Enterprise BYOL

properties:
  zone:
    type: string
    default: us-central1-f
    x-googleProperty:
      type: GCE_ZONE
  dataNodeMachineType:
    type: string
    default: n1-standard-8
    x-googleProperty:
      type: GCE_MACHINE_TYPE
      zoneProperty: zone
      gceMachineType:
        minCpu: 2
        minRamGb: 4
  dataDiskSizeGb:
    type: integer
    default: 100
    minimum: 50
    maximum: 5000
    x-googleProperty:
      type: GCE_DISK_SIZE
      gceDiskSize:
        diskTypeProperty: diskType
  licenseKey:
    type: string
    default: xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
  startupScripts:
    type: array
    description: The startup script files.